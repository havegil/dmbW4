.restricted {
  font-size: 18px;
  position: relative;
  top: -15px;
}

.text {
	/*PRIMARY COLOR CLASSES*/
	&-primary-green {
		color : $color_primary_green;
	}
	&-primary-yellow {
		color : $color_primary_yellow;
	}
	&-primary-white {
		color : $color_primary_white;
	}

	/*SECONDARY COLOR CLASSES*/
	&-muted {
		color : $color_muted;
	}



	/*FONT SIZE CLASSES*/
	&-large {
		font-size   : $font_size_large;
		line-height : $font_size_large;
	}



	/*FONT WEIGHT CLASSES*/
	&-heavy {
		font-family : $font_family_heavy; 
	}
	&-medium {
		font-family : $font_family_medium; 
	}



	&-align-h-left {
		text-align : left;
	}
	&-align-h-center {
		text-align : center;
	}
	&-align-h-right {
		text-align : right;
	}


	&-align-v-top {
		vertical-align : top; 
	}
	&-align-v-middle {
		vertical-align : middle; 
	}
	&-align-v-bottom {
		vertical-align : bottom; 
	}
}


.txt {
	/* START ==> colors */
	&-default {
		color : $color_default;
	}
	&-info {
		color : $color_info;
	}
	&-brand {
		color : $color_brand;
	}
	&-emphasis {
		color : $color_emphasis;
	}
	&-muted {
		color : $color_muted;
	}
	&-highlight {
		color : $color_highlight;
	}
	&-callout {

	}
	/* END ==> colors */





	/* START ==> alignment */
	&-align-left {
		text-align : left;
	}
	&-align-center {
		text-align : center;
	}
	&-align-right {
		text-align : right;
	}
	/* END ==> alignment */

	&-title {
		font-family : $font_family_heavy; 
		font-size   : $font_title_size; 
		line-height : $font_title_line_height;
	}

	&-caption {
		font-family : $font_family_medium; 
		font-size   : $font_caption_size; 
		line-height : $font_caption_line_height;
	}

	&-legal {
	    font-size   : 0.7rem;
	    line-height : 1rem;
	    font-family : 'SubwayTest-Medium';
	}

	&-copyright {
		font-size   : 0.6rem;
		font-family : 'MyriadPro-BoldCondensed';

		~ .txt-copyright {
			margin-top : 0px;
		}
	}

}





