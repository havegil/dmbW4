.breakfastMenuFooter {
	position: relative;
	width: 100%;
	height: 1080px;
	color: #fff;

  .c-TableList_row {
    padding-bottom: 0px;
  }

	/**
	 * Column sizing
	 */
	& .c-Header_column:nth-child(1),
  & .c-TableList_column:nth-child(1) {
    width: 74%;
    padding-right: 0px;
  }

  & .c-Header_column:nth-child(2),
  & .c-TableList_column:nth-child(2) {
    width: 13%;
  }

  & .c-Header_column:nth-child(3),
  & .c-TableList_column:nth-child(3) {
    width: 13%;
  }

  .c-TableList_row * {
    transition: all 200ms;
  }

	& sup {
		position: relative;
	}

	& .bfastHeader {
		font-family: 'Subway-Heavy';
		font-size: 70px;
    color: #fff;
	}

	& .bfastTagLine {
		font-family: 'Subway-Heavy';
		font-size: 30px;
		margin-bottom: 30px;
		margin-top: 5px;
		color: #ff8200;
	}

	& .bfastContent {
		position: relative;
		padding: 37px 0px 40px 0px;
	}

	& .bfastItemTitle {
		position: relative;
		margin-bottom: 0.3rem;
		font-family: 'Subway-Heavy';
		font-size: 36px;
		line-height: 1;
	}

	& .bfastItemCaption {
		font-family: 'Subway-Medium';
		font-size: 36px;
		line-height: 1;
    margin-left: 15px;
	}

	& .deductText {
    position: relative;
		width: 100%;
		top: 35px;
		overflow: visible;
		font-family: 'Subway-Medium';
		font-size: 30px;
		color: #008938;

		& .deductAsterisk {
			position: absolute;
			top: 0px !important;
			left: -15px;
		}
	}

	& .c-BreakfastMenu_legal_text {
		position: absolute;
		bottom: 25px;
		.c-Promotion_item-tax {
			color: #008938;
			font-size: 18px;
    	font-weight: 100;
		}
		.c-Menus_copyright {
			color: #008938;
		}
	}

	& .breakfastSandwichImage {
		display: none;
		position: absolute;
		right: -50px;
		bottom: 95px;
	}


	& .servedUntil11 {
		position: absolute;
		top: 30px;
		right: 22px;
	}

	.bfastCombo {
		position: absolute;
		top: 528px;
		left: -6px;
	}

	.bfastCombo .comboDrink {
		position: absolute;
		left: 670px;
		transition: all 500ms;
	}

	.comboPrice {
		position: absolute;
		left: 455px;
		top: 50px;
		font-family: 'Subway-Heavy';
		font-size: 36px;
		color: #f2b700;
	}

	.comboType {
		position: absolute;
    left: 139px;
    top: 181px;
    font-family: 'Subway-Heavy';
    font-size: 27px;
    color: #fff;
    width: 500px;
	}

	.comboFg {
		position: absolute;
		left: 0;
		top: 0;
	}

	&.r-showCoffee {
	  .comboCoffee {opacity: 1}
	  .comboCup    {opacity: 0}
	  .comboJuice  {opacity: 0}
	}

	&.r-showCup {
	  .comboCoffee {opacity: 0}
	  .comboCup    {opacity: 1}
	  .comboJuice  {opacity: 0}
	}

	&.r-showJuice {
	  .comboCoffee {opacity: 0}
	  .comboCup    {opacity: 0}
	  .comboJuice  {opacity: 1}
	}
}

   
.breakfastMenuFooter.croissant-store {
	
	& .c-Header_column:nth-child(1),
  & .c-TableList_column:nth-child(1) {
    width: 55%;
    padding-right: 0px;
	}
	
	& .c-Header_column:nth-child(2), 
	& .c-TableList_column:nth-child(2) {
    width: 16%;
	}

	& .c-Header_column:nth-child(3), 
	& .c-TableList_column:nth-child(3) {
    width: 14%;
	}

	.c-Menus_title-v-expand {
    /* line-height: 2.8rem; */
		margin-bottom: 6px;
	}

	.c-TableList_row .sub_title {
		display: inline !important;
	}

	& .bfastCombo {
    position: absolute;
    top: 593px;
    left: -6px;
	}

	& .bfastCombo .comboDrink {
		position: absolute;
		left: 790px;
		top: 20px;
    height: 220px;
		-webkit-transition: all 500ms;
		transition: all 500ms;
	}

	& .comboPrice {
			position: absolute;
			left: 695px;
			top: 50px;
			font-family: 'Subway-Heavy';
			font-size: 36px;
			color: #f2b700;
	}

	& .comboType {
		display: none;
	}

	& .clarify {
    max-width: 95%;
	}
	& .menu-footer {
		height: 205px;
	}
}