@keyframes shiftSteakSub {
  to {
    transform: scale(0.60) translate3d(-800px, -315px, 0);
  }
}

@keyframes shiftSteakSub2 {
  from {
    transform: scale(0.60) translate3d(-800px, -315px, 0);
  }
  to {
    transform: scale(0.52) translate3d(-1170px, -275px, 0);
  }
}

@keyframes shiftMainCopy {
  to {
    transform: scale(0.47) translate3d(1800px, 680px, 0);
  }
}
@keyframes shiftMainCopy2 {
  from {
    transform: scale(0.47) translate3d(1800px, 680px, 0);
  }
  to {
    transform: scale(0.33) translate3d(1650px, 1080px, 0);
  }
}

@keyframes shiftTitleRight {
  to {
    transform: translate3d(180px, 0, 0);
  }
}


@keyframes copyFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideIntoPlaceCopy {
  to {
    transform: translate3d(0, 0, 0) rotateY(0);
  }
}


.steakLoversFeatured {
  background-color: white;
  position: relative;

  img {
    height: auto;
  }

  .introducing {
    position: absolute;
    top: 55px;
    left: 65px;
    will-change: transform;

    animation: shiftMainCopy 2s cubic-bezier(0.215, 0.610, 0.355, 1.000) 2.5s forwards,
      shiftMainCopy2 1s ease-in-out 4.5s forwards;
  }

  .mainSteakSub {
    position: absolute;
    bottom: -15px;
    left: -620px;
    z-index: 2;
    will-change: transform;

    animation: shiftSteakSub 1.1s cubic-bezier(0.215, 0.610, 0.355, 1.000) 2.5s forwards,
      shiftSteakSub2 1s ease-in-out 4.5s forwards;
  }

  .titleContainer {
    display: flex;
    justify-content: center;
    width: 100%;
    position: absolute;
    top: 35px;
    left: 0;
  }

  .collectionTitle {
    opacity: 0;
    will-change: opacity;
    transform: translate3d(180px, 0, 0);

    animation: copyFadeIn 1s ease-in-out 6.5s forwards;
      /*shiftTitleRight 700ms cubic-bezier(0.215, 0.610, 0.355, 1.000) 8.4s forwards;*/

  }

  .otherSub2 {
    position: absolute;
    top: 170px;
    right: 0px;
    will-change: transform;

    transform: translate3d(2000px, 0, 0);
    animation: slideIntoPlaceCopy 1s cubic-bezier(0.215, 0.610, 0.355, 1.000) 6s forwards;
  }

  .otherSub1 {
    position: absolute;
    bottom: -15px;
    right: 0px;
    z-index: 3;
    will-change: transform;

    transform: translate3d(2000px, 0, 0);
    animation: slideIntoPlaceCopy 1s cubic-bezier(0.215, 0.610, 0.355, 1.000) 6s forwards;
  }

  .finalCal {
    position: absolute;
    bottom: 330px;
    right: 423px;
    opacity: 0;
    z-index: 2;
    animation: copyFadeIn 1s ease-in-out 6.5s forwards;
  }

  .pricePoint499 {
    position: absolute;
    bottom: 70px;
    left: 0px;
    opacity: 0;
    transform: scale(0.85);
    animation: copyFadeIn 1s ease-in-out 6.5s forwards;
  }

  .lto {
    position: absolute;
    bottom: 0px;
    right: 0px;
    z-index: 4;

    transform: translate3d(700px, 0, 0);
    animation: slideIntoPlaceCopy 1s ease-in-out 6.5s forwards;
  }

  .price {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 1;
    transform: translate3d(0px, -800px, 0);
    will-change: transform;

    animation: slideIntoPlaceCopy 1s cubic-bezier(0.215, 0.610, 0.355, 1.000) 6.5s forwards;
  }

  .legal {
    position: absolute;
    bottom: 15px;
    left: 15px;
    opacity: 0;

    animation: copyFadeIn 1s ease-in-out 6.5s forwards;
  }

  
}