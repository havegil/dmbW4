/*MODULE ROOT ELEMENT - DEFINED ON THE VIEW CONSTRUCTOR - USED TO WRAP THE TEMPLATE ELEMENTS*/
.dual-player-promo {

	.c-FeatPromoItalianHero2017w3 {
		contain  : strict;
		position : relative;
		width    : 100%;
		height   : 100%;
		overflow : hidden;
		background-color:#4c006a;
	}

	/*LAYOUT ELEMENT*/
	.c-FeatPromoItalianHero2017w3_frame {
		position  : absolute;
		display   : flex;
		flex-flow : column nowrap;
		top       : 0px;
		left      : 0px;
		width     : 100%;
		height    : 100%;

		&:nth-child(1) {
			z-index : 1;
		}
		&:nth-child(2) {
			z-index : 2;
		}
		&:nth-child(3) {
			z-index : 3;
		}
		&:nth-child(4) {
			z-index : 4;
		}
	}

	/*STYLES AND TRANSITIONS FOR COMPONENT CONTENT*/
	.c-FeatPromoItalianHero2017w3_shade {
		z-index     : 2;  
		position    : absolute;
		top         : 0px;
		left        : 0px;
		width       : 100%;
		height      : 100%;
	}

	.c-FeatPromoItalianHero2017w3_content {
		position    : relative;
		width       : 100%;
		height      : 100%;
		opacity     : 1;
	}

	.c-FeatPromoItalianHero2017w3_header {
		z-index  : 2;
		position : absolute;
		top      : 0px;
		left     : 0px;  
	}

	.c-FeatPromoItalianHero2017w3_header_msg {
		position    : relative;
	}

	.c-FeatPromoItalianHero2017w3_background {
		z-index     : 1;
		position    : relative;
		width       : 100%;
		height      : 100%;
	}

	.c-FeatPromoItalianHero2017w3_item {
		z-index     : 5;
		position    : absolute;
		bottom      : 60px;
		right       : 100px; 
		opacity     : 1;
	}

	.c-FeatPromoItalianHero2017w3_item_header {
		position       : relative;
		padding-bottom : 50px;
	}

	.c-FeatPromoItalianHero2017w3_item_options {
		position: relative;
	}

	.c-FeatPromoItalianHero2017w3_legal {
		z-index     : 5;
		position    : absolute;
		bottom      : 20px;
		left        : 60px;
		opacity     : 1;	
	}

	/*STYLES AND TRANSITIONS FOR THE SLICES*/
	.c-FeatPromoItalianHero2017w3_slice {
		position    : relative;
		flex        : 1;
		overflow    : hidden;
	}

	.c-FeatPromoItalianHero2017w3_slice_title {
		z-index     : 2;
		position    : absolute; 
	}

	.c-FeatPromoItalianHero2017w3_slice_background {
		z-index  : 1;
		position : relative; 
	}
}