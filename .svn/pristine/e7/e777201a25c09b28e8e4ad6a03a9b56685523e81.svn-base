.dev-user-info {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  left: 0px;
  top: 0px;
  padding: 0.8rem 1.0rem;
  z-index: 999;
  background-color: orangered;
  color: white;
  font-family: 'SubwayTest-Medium';
  border-radius: 0 0 20px 0;
  opacity: 0.85;
  text-shadow: 1px 1px 0 rgba(50,20,0,0.4);
}


