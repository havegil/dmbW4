
/*-------------
    DELUXE
-------------*/
.c-InterruptDeluxe2016w8 {
	position    : relative;
    width   	: 100%;
    height      : 1080px;
    overflow    : visible;
    font-family : 'MarkOffcPro-Black';
    background  : #ffffff;
    color       : #ff8201;	
	transform   : translate3d(0,-100%,0);	
	will-change : transform;

    /*transition : [property] [duration] [timing function] [delay];*/
	transition  : transform 200ms ease-out 0s;

    &[data-ui-state~="transition:in"] {
		transform   : translate3d(0,0,0);
	}
	&[data-ui-state~="transition:in"],&[data-ui-state~="transition:out"] {
		.c-InterruptDeluxe2016w8_sub {
			transform : translate3d(-50%,0,0);
		}
		.c-InterruptDeluxe2016w8_proposition {
			opacity : 0;
		}
		.c-InterruptDeluxe2016w8_deal,.c-InterruptDeluxe2016w8_legal {
			opacity : 1;
		}
    }


    &[data-ui-state~="transition:out"] {
		transform : translate3d(0,100%,0);
    }
}


	.c-InterruptDeluxe2016w8_sub {
		z-index     : 10;
		position    : absolute;
		top         : 45%; /* settles at 481px; */
		left        : 50%;
		transform   : translate3d(-50%,-200%,0);
		will-change : transform;
		/*transition : [property] [duration] [timing function] [delay];*/
		transition  : transform 800ms cubic-bezier(.31,1.8,.38,.56) 3.0s;
	}

	.c-InterruptDeluxe2016w8_proposition {
		/* 1230 x 378 */
		z-index     : 8;
		position    : absolute;
		top         : 30%;
		left        : 0px;
		width       : 100%;
		font-size   : 9.4rem;
		line-height : 13rem;
		text-align  : center; 
		will-change : opacity;
		/*transition : [property] [duration] [timing function] [delay];*/
		transition  : opacity 0ms ease-out 3.15s;
		span {
			font-size : 20rem;
		}
	}
	.c-InterruptDeluxe2016w8_deal {
		position    : absolute;
		top         : 6%;
		left        : 0;
		width       : 100%;
		text-align  : center;
		font-size   : 265px;
		line-height : 10.5rem;
		font-size   : 16.5rem;
		color       : #008938;
		opacity     : 0;

		/*transition : [property] [duration] [timing function] [delay];*/
		transition  : opacity 200ms linear 5.0s;
		span {
			font-size : 12rem;
			color     : #ff8201;
		}
	}
	.c-InterruptDeluxe2016w8_legal {
		position    : absolute;
		bottom      : 2%;
		left        : 3%;
		font-size   : 1.5rem;
		font-family : 'MarkScOffcPro';
		color       : #6d6f71;
		opacity     : 0;

		/*transition : [property] [duration] [timing function] [delay];*/
		transition  : opacity 200ms linear 5.0s;		
	}