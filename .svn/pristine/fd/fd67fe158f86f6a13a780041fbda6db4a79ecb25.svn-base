.s-Four {

  width: 100%;
  height: 100%;

  .s-Secondary {
    position: absolute;
    top: 0;
    left: 50%;
    width: 50%;
    height: 100%;
  }

  .s-Meal {
    position: absolute;
    top: 0;
    left: 0%;
    width: 50%;
    height: 40%;
  }

  .s-Sides {
    position: absolute;
    top: 0%;
    left: 0%;
    width: 50%;
    height: 100%;
  }

  .s-Footer {
    position: absolute;
    top: calc(100% - 200px);
    left: 0%;
    width: 50%;
    height: calc(100% - 200px);
  }

}


.l-screen-reverse {
  .s-Four {

    width: 100%;
    height: 100%;

    .s-Secondary {
      position: absolute;
      top: 0;
      left: 0;
      right: 50%;
      height: 100%;
    }

    .s-Meal {
      position: absolute;
      top: 0;
      left: 50%;
      width: 50%;
      height: 40%;
    }

    .s-Sides {
      position: absolute;
      top: 0%;
      left: 50%;
      width: 50%;
      height: 100%;
    }


    .s-Footer {
      position: absolute;
      top: calc(100% - 200px);
      left: 50%;
      width: 50%;
      height: calc(100% - 200px);
    }

  }

}

.s-Four {
  .breakfastMenuFooter .menu-footer {
    position: absolute;
    width: 100%;
    height: 145px;
    bottom: 0;
    left: 35px;
  }
}
