.brisket-interrupt-container {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}

.brisket-interrupt-panel {
	height: 100%;
	width: 25%;
	display: inline-block;
	background-size: cover;
	padding: 0;
	margin: 0;
	box-sizing: border-box;
	overflow: hidden;
	position: relative;
}

.brisket-interrupt-panel img {
	position: absolute;
	top: 0;
}

.brisket-interrupt-panel .sandwich-img {
	width: 125%;
}