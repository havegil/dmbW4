/**********************************************************************************************************************
CURRENT FONTS
**********************************************************************************************************************/
/*font families*/
$font_family_heavy     : 'Subway-Heavy';
$font_family_medium    : 'Subway-Medium';
$font_family_light     : 'MyriadPro-Condensed';
$font_family_condensed : 'MyriadPro-BoldCondensed';


/*specific font sizing per component child nodes*/
$font_header_size           : 83px;
$font_header_line_height    : 0.9;

$font_subheader_size        : 2.35rem;
$font_subheader_line_height : 2.35rem;

$font_tagline_size          : 2.6rem;
$font_tagline_line_height   : 2.6rem;

$font_note_size             : 30px;
$font_note_line_height      : 34px;

$font_title_size            : 36px;
$font_title_line_height     : 39px;

$font_subtitle_size         : 24px;
$font_subtitle_line_height  : 29px;

$font_caption_size          : 36px;
$font_caption_size_sm       : 1.6rem;
$font_caption_line_height   : 2.2rem;

$font_copyright_size        : 0.8rem;
$font_copyright_line_height : 1rem;

$font_legal_size            : 0.5rem;
$font_legal_line_height     : 0.6rem;

$font_trademark_size        : 0.5rem;
$font_trademark_line_height : 0.6rem;




