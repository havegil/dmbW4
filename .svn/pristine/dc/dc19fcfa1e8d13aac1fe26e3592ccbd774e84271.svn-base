.s-Meal {
  position: absolute;
  width: 1280px;
  height: 100%;
  overflow: hidden;

  .disclaimer {
    position: absolute;
    left: 35px;
    bottom: 202px;
    color: #fff;
    font-family: 'Subway-Medium';
    font-size: 36px;
  }

  .footer {
    position: absolute;
    top: calc(100% - 200px);
    left: 0%;
    right: 0%;
    height: 200px;
  }

  .meal-promo-overlay {
    width: 1280px;
    height: 880px;
    position: absolute;
    top: 0;
    left: 0;

    img {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
    }
  }
}

.s-MiniPromo {
  position: absolute;
  left: 1280px;
  width: 640px;
  height: 100%;
  overflow: hidden;
}

.featuredInterrupt .dj-content {
  width: 640px;
  height: 1080px;
}

.l-screen-reverse {

  .s-Meal {
    position: absolute;
    left: 640px;
    width: 1280px;
    height: 100%;
    overflow: hidden;
  }

  .s-MiniPromo {
    position: absolute;
    left: 0px;
    width: 640px;
    height: 100%;
    overflow: hidden;
  }

}
