
.saladFontDefault {
	position: relative;
	font-size: 36px;
	line-height: 2.5rem;
	font-family: 'Subway-Medium';
}

.choppedSalad {
	padding: 15px 35px 0 15px;
	height: 475px;

	.c-Addon_info {
		position : relative;

		&-constrain {
			display : inline-block;
			width   : 53%;
		}
	}

	.c-Addon_heading {
		position    : relative;
		font-size   : 70px;
		line-height : 1;
		font-family : 'Subway-Heavy';
    color: #fff;
	}

	.saladPrice {
		font-size: 50px;
	}

	.makeAny {
		font-size: 36px;
		line-height: 1.3;
	}

	.c-Addon_subheading {
		position    : relative;
		padding     : 11px 0px 0px 0px;
		font-family : 'Subway-Heavy';
		-webkit-font-smoothing: antialiased;
		~ .c-Addon_subheading {
			padding : 16px 0px 0px 0px;
		}
	}

	.saladAvailable {
		font-size: 36px;
		line-height: 1.1;
		font-family: 'Subway-Heavy';
	}

	.c-Addon_caption {
		@extend .saladFontDefault;

		&-lift {
			font-size: 36px;
			font-family: 'Subway-Medium';
			padding-bottom : 28px;
		}
		&-nowrap{
			font-size: 36px;
			font-family: 'Subway-Medium';
			padding-bottom : 28px;
			white-space:nowrap;
		}
	}

  .salad {
    position: absolute;
    right: 1%;
    top: 25%;
    width: 55%;
  }

  .saladType {
    position: absolute;
    right: 21px;
    top: 22%;
    line-height: 1.2;
    font-size: 36px;
    font-family: 'Subway-Heavy';
  }

	.nowrap {
		display: block;
		font-size: 36px;
		font-family: 'Subway-Medium';
		padding-bottom: 28px;
		white-space: nowrap;
	}

	.c-Addon_content {
		@extend .saladFontDefault;
	}

}
